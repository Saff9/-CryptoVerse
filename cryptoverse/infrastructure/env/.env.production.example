# ==========================================
# CryptoVerse Production Environment Variables
# ==========================================
# Copy this file to .env.production and fill in the values
# IMPORTANT: Never commit .env.production to version control
# ==========================================

# ==========================================
# Application Settings
# ==========================================
NODE_ENV=production
APP_NAME=CryptoVerse
PORT=3001

# ==========================================
# Database Configuration
# ==========================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://cryptoverse_user:CHANGE_ME@postgres-service:5432/cryptoverse

# Database connection pool settings
DB_POOL_MIN=5
DB_POOL_MAX=20

# ==========================================
# Redis Configuration
# ==========================================
# Redis connection string
# Format: redis://[:PASSWORD@]HOST:PORT
REDIS_URL=redis://redis-service:6379

# Redis password (optional, leave empty if no auth)
REDIS_PASSWORD=

# ==========================================
# JWT Configuration
# ==========================================
# JWT secret key (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS

# JWT expiration time
JWT_EXPIRATION=7d

# JWT algorithm
JWT_ALGORITHM=HS256

# ==========================================
# Telegram Configuration
# ==========================================
# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Telegram Bot ID (numeric part of bot token)
TELEGRAM_BOT_ID=123456789

# ==========================================
# CORS Configuration
# ==========================================
# Allowed origins (comma-separated)
CORS_ORIGIN=https://cryptoverse.example.com,https://api.cryptoverse.example.com

# Allowed methods
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# Enable credentials
CORS_CREDENTIALS=true

# ==========================================
# Rate Limiting
# ==========================================
# Rate limit window in seconds
RATE_LIMIT_TTL=60

# Maximum requests per window
RATE_LIMIT_MAX=100

# ==========================================
# Logging Configuration
# ==========================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log format: json, pretty
LOG_FORMAT=json

# ==========================================
# Mining Configuration
# ==========================================
# Mining cooldown in seconds
MINING_COOLDOWN_SECONDS=3600

# Base mining reward
MINING_BASE_REWARD=1.0

# Maximum mining multiplier
MINING_MULTIPLIER_MAX=2.0

# ==========================================
# Character Configuration
# ==========================================
# Maximum character level
CHARACTER_MAX_LEVEL=50

# Base character power
CHARACTER_BASE_POWER=100

# ==========================================
# Quest Configuration
# ==========================================
# Hour to reset daily quests (0-23)
QUEST_DAILY_RESET_HOUR=0

# Day to reset weekly quests (0-6, 0 = Sunday)
QUEST_WEEKLY_RESET_DAY=1

# ==========================================
# Leaderboard Configuration
# ==========================================
# Cache TTL in seconds
LEADERBOARD_CACHE_TTL=300

# Maximum entries to return
LEADERBOARD_MAX_ENTRIES=100

# ==========================================
# Achievement Configuration
# ==========================================
# Enable achievement notifications
ACHIEVEMENT_NOTIFICATION_ENABLED=true

# ==========================================
# Airdrop Configuration
# ==========================================
# Default airdrop amount
AIRDROP_DEFAULT_AMOUNT=100

# ==========================================
# Security Configuration
# ==========================================
# Encryption key for sensitive data (32 characters)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=CHANGE_ME_TO_32_CHAR_KEY

# ==========================================
# Monitoring Configuration
# ==========================================
# Sentry DSN (optional)
SENTRY_DSN=

# Enable Prometheus metrics
METRICS_ENABLED=true

# Metrics port
METRICS_PORT=9090

# ==========================================
# Email Configuration (Optional)
# ==========================================
# SMTP host
SMTP_HOST=smtp.example.com

# SMTP port
SMTP_PORT=587

# SMTP user
SMTP_USER=noreply@example.com

# SMTP password
SMTP_PASSWORD=

# ==========================================
# Storage Configuration (Optional)
# ==========================================
# S3-compatible storage endpoint
STORAGE_ENDPOINT=https://s3.amazonaws.com

# Storage access key
STORAGE_ACCESS_KEY=

# Storage secret key
STORAGE_SECRET_KEY=

# Storage bucket
STORAGE_BUCKET=cryptoverse-assets

# Storage region
STORAGE_REGION=us-east-1

# ==========================================
# Feature Flags
# ==========================================
# Enable WebSocket support
FEATURE_WEBSOCKET=true

# Enable achievements
FEATURE_ACHIEVEMENTS=true

# Enable quests
FEATURE_QUESTS=true

# Enable leaderboards
FEATURE_LEADERBOARDS=true

# Enable airdrops
FEATURE_AIRDROPS=true

# Enable referrals
FEATURE_REFERRALS=true

# ==========================================
# Frontend Environment Variables
# ==========================================
# Public API URL (accessible from browser)
NEXT_PUBLIC_API_URL=https://api.cryptoverse.example.com

# Telegram Bot ID (public, safe to expose)
NEXT_PUBLIC_TELEGRAM_BOT_ID=123456789

# App name
NEXT_PUBLIC_APP_NAME=CryptoVerse

# Default language
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Theme
NEXT_PUBLIC_THEME=dark

# Enable animations
NEXT_PUBLIC_ANIMATION_ENABLED=true

# Enable haptic feedback
NEXT_PUBLIC_HAPTICS_ENABLED=true